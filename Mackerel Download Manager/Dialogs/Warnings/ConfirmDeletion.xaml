<Window x:Class="Mackerel_Download_Manager.Dialogs.Warnings.ConfirmDeletion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConfirmDeletion" Height="158" Width="390"
		Background="#F0F0F0"
		WindowStartupLocation="CenterOwner"
		ResizeMode="NoResize">
	<Grid
		Margin="10">
		<StackPanel Orientation="Vertical">
		<TextBlock
			x:Name="MessageText"
			TextWrapping="Wrap"
			Width="349"
			Height="50" />
			<StackPanel 
				Orientation="Horizontal"
				HorizontalAlignment="Center">
				<Button
					x:Name="btnYes"
					IsDefault="True"
					Width="72"
					Height="21"
					Margin="0 0 40 0"
					Content="Yes" Click="btnYes_Click" />
				<Button
					x:Name="btnNo"
					IsCancel="True"
					Width="72"
					Height="21"
					Content="No" Click="btnNo_Click" />
			</StackPanel>
			<CheckBox
				x:Name="DontShow"
				Margin="18,10,0,0"
				Content="Don't show this dialog again" />
		</StackPanel>
	</Grid>
</Window>
